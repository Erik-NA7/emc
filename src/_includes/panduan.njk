<section id="panduan">
  <div class="mt-section">
    <h2 class="headings mb-5" style="color: var(--primary5);">Frequently Asked Question</h2>
    <div class="accordion">
      {% for item in faq %}
        <div class="faq-item-container">
          <button class="faq-header" id="heading-{{loop.index}}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{loop.index}}" aria-expanded="false" aria-controls="collapse-{{loop.index}}">
            <span class="bullet">
              <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 1024 1024" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                <path d="M715.8 493.5L335 165.1c-14.2-12.2-35-1.2-35 18.5v656.8c0 19.7 20.8 30.7 35 18.5l380.8-328.4c10.9-9.4 10.9-27.6 0-37z"></path>
              </svg>
            </span>
            <span type="button" data-bs-target="#collapse-{{loop.index}}">
              <p class="headings semi-bold m-0 text-start">{{ item.header }}</p>
            </span>
          </button>
          <div id="collapse-{{loop.index}}" class="accordion-collapse collapse" aria-labelledby="heading-{{loop.index}}" data-bs-parent="#accordion">
          {% if item.items.length > 1 %}
            <ol class="ordered-list">
              {% for i in item.items %}
                <li>{{ i }}</li>
              {% endfor %}
            </ol>
          {% else %}
            <p class="regular ps-5 mt-3" style="text-align:left">{{ item.items[0] }}</p>
          {% endif%}
          </div>
        </div>
        <br>
      {% endfor %}
    </div>
  </div>
</section>
<script src="js/accordion_toggle.js" defer></script>