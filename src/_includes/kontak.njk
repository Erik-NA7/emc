<div class="col-xl">
  <form class="contact-form m-auto" action="">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="from"
        placeholder="Nama"
      />
      <span class="error-text"></span>
    </div>
    <div class="row">
      <div class="col-lg-6" style="margin-top: 18px;">
        <div class="form-group">
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Email"
          />
          <span class="error-text"></span>
        </div>
      </div>
      <div class="col-lg-6" style="margin-top: 18px;">
        <div class="form-group mt-xs-5 mt-md-0">
          <div class="input-wrap">
            <div class="d-flex align-items-center gap-1">
              <img src="images/flag-indonesia.svg" alt="bendera Indonesia" style="width: 18px; height: 18px;"/>
            </div>
            <div>+62</div>
            <div class="flex-grow-1">
              <input
                type="tel"
                name="phone"
                placeholder="Nomor Handphone"
              />
            </div>  
          </div>
          <span class="error-text" name="phone-error-text"></span>
        </div>
      </div>
    </div>
    <div class="form-group" style="margin-top: 18px;">
      <textarea
        type="text"
        class="form-control"
        name="message"
        placeholder="Pesan"
        rows="8"
      >
      </textarea>
      <span class="error-text"></span>
    </div>
    <br/>
    <div class="mt-5">
      <button
        type="submit"
        class="button-mail semi-bold mt-3"
        disabled
      >
        <svg stroke="currentColor" fill="var(--neutral0)" stroke-width="0" viewBox="0 0 24 24" height="20" width="20" xmlns="http://www.w3.org/2000/svg"><path fill="none" d="M0 0h24v24H0V0z"></path><path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"></path></svg>
        Kirim Pesan
      </button>
    </div>
  </form>
</div>
<script src="js/kontak_form.js" defer></script>